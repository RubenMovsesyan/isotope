[
    {
        "label": "Run Debug Log",
        "env": {
            "RUST_LOG": "debug"
        },
        "command": "cargo run --bin isotope_test"
    },
    {
        "label": "Run",
        "env": {
            "RUST_LOG": "info"
        },
        "command": "cargo run --bin isotope_test; exec $SHELL",
        "use_new_terminal": false,
        "reveal": "always"
    },
    {
        "label": "Run Backtrace",
        "env": {
            "RUST_BACKTRACE": "1"
        },
        "command": "cargo run"
    },
    {
        "label": "Run With Deadlock Detection",
        "env": {
            "RUST_LOG": "debug",
            "RUST_BACKTRACE": "1"
        },
        "command": "cargo run --features deadlock_detection"
    }
]
